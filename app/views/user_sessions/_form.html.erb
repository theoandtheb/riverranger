<%= form_tag user_sessions_path, :method => :post do %>
<p>Not yet a River Ranger? <a href=<%= register_path %> class="button mini">Register</a></p>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "button" %>
  </div>
<% end %>
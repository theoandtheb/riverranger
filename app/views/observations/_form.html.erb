        </div>

        <div class="field">
          <%= studies_form.label :url, "Web Address" %><br>
          <%= studies_form.url_field :url %>
        </div>

        <div class="field">
          <%= studies_form.label :abstract, "Abstract" %><br>
          <%= studies_form.text_area :abstract %>
        </div>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit "Submit observation", class: "button" %>

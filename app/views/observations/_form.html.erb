        <a href=<%= insect_path %> class="info">?</a>

        <%= bools_form.check_box :bird %>
        <%= bools_form.label :bird, "Bird" %>
        <a href=<%= bird_path %> class="info">?</a>

        <%= bools_form.check_box :species_at_risk %>
